[Unit]
Description=IPv6 Packet Filtering Framework

[Service]
Type=oneshot
ExecStart=/sbin/ip6tables-restore /var/lib/ip6tables/rules-save
ExecReload=/sbin/ip6tables-restore /var/lib/ip6tables/rules-save
ExecStop=/usr/lib/systemd/scripts/iptables-flush 6
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target

